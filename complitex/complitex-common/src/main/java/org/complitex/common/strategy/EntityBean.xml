<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.common.strategy.EntityBean">
    <resultMap id="entityResultMap" type="org.complitex.common.entity.Entity">
        <id column="entity_id" property="id"/>

        <result column="entity_table" property="table"/>

        <collection property="names" ofType="StringValue" column="entity_name_id" select="findNames"/>

        <collection property="entityAttributes" ofType="org.complitex.common.entity.EntityAttribute">
            <id column="attribute_type_id" property="id"/>

            <result column="mandatory" property="mandatory"/>
            <result column="attr_start_date" property="startDate"/>
            <result column="attr_end_date" property="endDate"/>
            <result column="system" property="system"/>

            <collection property="names" column="attribute_type_name_id" select="findNames"/>

            <collection property="valueTypes" ofType="org.complitex.common.entity.ValueType">
                <id column="attribute_value_type_id" property="id"/>
                <result column="attribute_value_type" property="valueType"/>
            </collection>
        </collection>
    </resultMap>

    <select id="load" parameterType="map" resultMap="entityResultMap">
        SELECT
        e.`id` as entity_id,
        e.`entity_table`,
        e.`entity_name_id`,
        eat.`id` as attribute_type_id,
        eat.`mandatory`,
        eat.`start_date` as attr_start_date,
        eat.`end_date` as attr_end_date,
        eat.`attribute_type_name_id`,
        eat.`system`,
        eavt.`id` as attribute_value_type_id,
        eavt.`attribute_value_type`
        FROM `entity` e
        JOIN `attribute_type` eat ON eat.`entity_id` = e.`id`
        JOIN `attribute_value_type` eavt ON eavt.`attribute_type_id` = eat.`id`
        WHERE e.`entity_table` = #{entity}
    </select>

    <select id="findNames" parameterType="long"
            resultMap="org.complitex.common.strategy.DomainObjectStrategy.stringValueResultMap">
        SELECT sc.* FROM `string_value` sc WHERE sc.`id` = #{value}
    </select>

    <insert id="insertAttributeType" useGeneratedKeys="true" keyProperty="id"
            parameterType="org.complitex.common.entity.EntityAttribute">
        INSERT INTO `attribute_type`(`entity_id`, `mandatory`, `attribute_type_name_id`, `start_date`) VALUES (#{entityId}, #{mandatory}, #{nameId}, #{startDate})
    </insert>

    <insert id="insertValueType">
        INSERT INTO `attribute_value_type`(`attribute_type_id`, `attribute_value_type`) VALUES (#{attributeTypeId}, #{valueType})
    </insert>

    <select id="allEntities" resultType="string">
        SELECT e.`entity_table` FROM `entity` e
    </select>

    <update id="removeAttributeTypes" parameterType="map">
        UPDATE `attribute_type` SET `end_date` = #{endDate} WHERE `id` IN
        <foreach item="id" collection="attributeTypeIds" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>
</mapper>