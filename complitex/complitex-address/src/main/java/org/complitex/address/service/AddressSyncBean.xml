<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.address.service.AddressSyncBean">
    <resultMap id="addressSyncResultMap" type="org.complitex.address.entity.AddressSync">
        <id column="id" property="id"/>
        <result column="object_id" property="objectId"/>
        <result column="parent_id" property="parentId"/>
        <result column="additional_parent_id" property="additionalParentId"/>
        <result column="external_id" property="externalId"/>
        <result column="additional_external_id" property="additionalExternalId"/>
        <result column="name" property="name"/>
        <result column="additional_name" property="additionalName"/>
        <result column="servicing_organization" property="servicingOrganization"/>
        <result column="balance_holder" property="balanceHolder"/>
        <result column="type" property="type"/>
        <result column="status" property="status"/>
        <result column="date" property="date"/>
    </resultMap>

    <insert id="insertAddressSync" parameterType="org.complitex.address.entity.AddressSync"
            useGeneratedKeys="true" keyProperty="id">
        insert into `address_sync` (`object_id`, `parent_id`, `additional_parent_id`, `external_id`,
                                    `additional_external_id`, `name`, `additional_name`, `servicing_organization`,
                                    `balance_holder`, `type`, `status`, `date`)
        values (#{objectId}, #{parentId}, #{additionalParentId}, #{externalId}, #{additionalExternalId},
                #{name}, #{additionalName}, #{servicingOrganization}, #{balanceHolder}, #{type}, #{status}, #{date})
    </insert>

    <delete id="deleteAddressSync" parameterType="long">
        delete from `address_sync` where `id` = #{id}
    </delete>

    <select id="selectAddressSync" parameterType="long" resultMap="addressSyncResultMap">
        select * from `address_sync` where `id` = #{id}
    </select>

    <sql id="selectAddressSyncWhere">
        <where>
            <if test="object.objectId != null">and `object_id` = #{object.objectId}</if>
            <if test="object.parentId != null">and `parent_id` = #{object.parentId}</if>
            <if test="object.additionalParentId != null">and `additional_parent_id` = #{object.additionalParentId}</if>
            <if test="object.externalId != null">and `external_id` = #{object.externalId}</if>
            <if test="object.additionalExternalId != null">and `additional_external_id` = #{object.additionalExternalId}</if>
            <if test="object.name != null">and `name` like concat('%', #{object.name}, '%')</if>
            <if test="object.additionalName != null">and `additional_name` = #{object.additionalName}</if>
            <if test="object.servicingOrganization != null">and `servicing_organization` = #{object.servicingOrganization}</if>
            <if test="object.balanceHolder != null">and `balance_holder` = #{object.balanceHolder}</if>
            <if test="object.type != null">and `type` = #{object.type}</if>
            <if test="object.status != null">and `status` = #{object.status}</if>
            <!--<if test="object.date != null">and `date` = #{object.date}</if>-->
        </where>
    </sql>

    <select id="selectAddressSyncList" parameterType="org.complitex.common.entity.FilterWrapper"
            resultMap="addressSyncResultMap">
        select * from `address_sync` <include refid="selectAddressSyncWhere"/> ${orderLimit}
    </select>

    <select id="selectAddressSyncCount" parameterType="org.complitex.common.entity.FilterWrapper" resultType="long">
        select count(*) from `address_sync` <include refid="selectAddressSyncWhere"/>
    </select>

    <select id="selectAddressSyncFilters" parameterType="org.complitex.address.entity.AddressEntity"
            resultType="org.complitex.address.entity.AddressSyncFilter">
        select `status`, count(*) as `count` from address_sync where type = #{addressEntity} group by `status`
    </select>
</mapper>

