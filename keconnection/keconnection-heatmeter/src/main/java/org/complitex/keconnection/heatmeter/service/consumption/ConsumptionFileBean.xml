<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.keconnection.heatmeter.service.consumption.ConsumptionFileBean">
    <resultMap id="consumptionFileResultMap"
               type="org.complitex.keconnection.heatmeter.entity.consumption.ConsumptionFile">
        <id column="id"/>
        <result column="name"/>
        <result column="om"/>
        <result column="service_provider_id"/>
        <result column="user_organization_id"/>
        <result column="type"/>
        <result column="status"/>
        <result column="loaded"/>
        <result column="check_sum"/>
    </resultMap>

    <sql id="sqlWhere">
        <where>
            <if test="object.name != null">and `name` like concat('%',#{object.name},'%')</if>
            <if test="object.om != null">and `om` = #{object.om}</if>
            <if test="object.serviceProviderId != null">and `service_provider_id` = #{object.serviceProviderId}</if>
            <if test="object.userOrganizationId != null">and `user_organization_id` = #{object.userOrganizationId}</if>
            <if test="object.type != null">and `type` = #{object.type}</if>
            <if test="object.status != null">and `status` = #{object.status}</if>
            <if test="object.checkSum != null">and `check_sum` = #{object.checkSum}</if>
        </where>
    </sql>

    <select id="selectConsumptionFiles" parameterType="org.complitex.common.entity.FilterWrapper"
            resultMap="consumptionFileResultMap">
        select * from consumption_file <include refid="sqlWhere"/>
        order by ${sortProperty} ${asc} limit #{first}, #{count}
    </select>

    <select id="selectConsumptionFilesCount" parameterType="org.complitex.common.entity.FilterWrapper" resultType="long">
        select count(1) from consumption_file <include refid="sqlWhere"/>
    </select>

    <insert id="insertConsumptionFile" parameterType="org.complitex.keconnection.heatmeter.entity.consumption.ConsumptionFile"
            useGeneratedKeys="true" keyProperty="id">
        insert into consumption_file (name, om, service_provider_id, user_organization_id, type, status, loaded, check_sum)
                value (#{name}, #{om}, #{serviceProviderId}, #{userOrganizationId}, #{type}, #{status}, #{loaded}, #{checkSum})
    </insert>

    <update id="updateConsumptionFile" parameterType="org.complitex.keconnection.heatmeter.entity.consumption.ConsumptionFile">
        update consumption_file set status = #{status} where id = #{id}
    </update>

    <delete id="deleteConsumptionFile" parameterType="long">
        delete from consumption_file where id = #{id}
    </delete>
</mapper>