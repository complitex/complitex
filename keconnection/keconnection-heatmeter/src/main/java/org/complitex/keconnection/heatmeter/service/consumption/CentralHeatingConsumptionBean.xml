<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.keconnection.heatmeter.service.consumption.CentralHeatingConsumptionBean">
    <resultMap id="centralHeatingConsumptionResultMap"
               type="org.complitex.keconnection.heatmeter.entity.consumption.CentralHeatingConsumption">
        <id column="id"/>
        <result column="number"/>
        <result column="district_code"/>
        <result column="organization_code"/>
        <result column="building_code"/>
        <result column="account_number"/>
        <result column="building_number"/>
        <result column="common_volume"/>
        <result column="apartment_range"/>
        <result column="begin_date"/>
        <result column="end_date"/>
        <result column="common_area"/>
        <result column="meter_volume"/>
        <result column="meter_area"/>
        <result column="common_rent_area"/>
        <result column="meter_rent_volume"/>
        <result column="meter_rent_area"/>
        <result column="no_meter_area"/>
        <result column="no_meter_rate"/>
        <result column="rate"/>
        <result column="no_meter_volume"/>
    </resultMap>

    <insert id="insertCentralHeatingConsumption" parameterType="org.complitex.keconnection.heatmeter.entity.consumption.CentralHeatingConsumption">
        insert into central_heating_consumption (number, district_code, organization_code, building_code, account_numner,
            street, building_number, common_volume, appartment_range, begin_date, end_date, common_area, meter_volume,
            meter_area, common_rent_area, meter_rent_volume, meter_rent_area, no_meter_area, no_meter_rate, rate, no_meter_volume)
        values (#{number}, #{districtCode}, #{organizationCode}, #{buildingCode}, #{accountNumber}, #{street},
            #{buildingNumber}, #{commonVolume}, #{apartmentRange}, #{beginDate}, #{endDate}, #{commonArea}, #{meterVolume},
            #{meterArea}, #{commonRentArea}, #{meterRentVolume}, #{meterRentArea}, #{noMeterArea}, #{noMeterRate},
            #{rate}, #{noMeterVolume})
    </insert>

    <update id="updateCentralHeatingConsumption" parameterType="org.complitex.keconnection.heatmeter.entity.consumption.CentralHeatingConsumption">
        <!--update column data if require-->
    </update>

    <delete id="deleteCentralHeatingConsumption" parameterType="long">
        delete from central_heating_consumption where id = #{id}
    </delete>

</mapper>