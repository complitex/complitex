<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ru.flexpay.eirc.registry.service.handle.changing.ServiceProviderAccountAttrChangingBean">
    <cache type="org.complitex.common.mybatis.caches.EhcacheCache"/>

    <resultMap id="SPAAttrChanging" type="ru.flexpay.eirc.registry.entity.changing.ServiceProviderAccountAttrChanging">
        <result column="id"                             property="id"/>
        <result column="spa_old_attribute_pk_id"        property="spaOldAttributePkId"/>
        <result column="spa_new_attribute_pk_id"        property="spaNewAttributePkId"/>
        <result column="registry_record_container_id"   property="registryRecordContainerId"/>
    </resultMap>

    <select id="selectSPAAttrChanging" parameterType="long" resultMap="SPAAttrChanging">
        select * from `registry_changing_spa_attribute` where `registry_record_container_id`= #{containerId}
    </select>

    <insert id="insertSPAAttrChanging" parameterType="ru.flexpay.eirc.registry.entity.changing.ServiceProviderAccountAttrChanging">
        insert into `registry_changing_spa_attribute` (`spa_old_attribute_pk_id`, `spa_new_attribute_pk_id`, `registry_record_container_id`)
          value (#{spaOldAttributePkId}, #{spaNewAttributePkId}, #{registryRecordContainerId});
    </insert>

    <delete id="deleteSPAAttrChanging" parameterType="ru.flexpay.eirc.registry.entity.changing.ServiceProviderAccountAttrChanging">
        delete from `registry_changing_spa_attribute` where `id` = #{id}
    </delete>
</mapper>